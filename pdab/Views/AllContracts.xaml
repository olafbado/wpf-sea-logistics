<local:AllViewBase x:Class="pdab.Views.AllContracts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pdab.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding List}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ContractId" Binding="{Binding ContractId}"/>
                <DataGridTextColumn Header="CargoId" Binding="{Binding CargoId}"/>
                <DataGridTextColumn Header="ShipId" Binding="{Binding ShipId}"/>
                <DataGridTextColumn Header="CustomerName" Binding="{Binding CustomerName}"/>
                <DataGridTextColumn Header="ContractDate" Binding="{Binding ContractDate}"/>
                <DataGridTextColumn Header="DeliveryDeadline" Binding="{Binding DeliveryDeadline}"/>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:AllViewBase>
